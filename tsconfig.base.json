{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "nodeNext",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "esnext",
    "module": "nodeNext",
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "customConditions": ["development"]
  },
  "exclude": ["node_modules", "tmp"]
}
