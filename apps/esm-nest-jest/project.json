{
  "name": "esm-nest-jest",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/esm-nest-jest/esm-nest-jest",
  "projectType": "application",
  "tags": [],
  "targets": {
    "lint": {
      "cache": true,
      "executor": "@nx/eslint:lint",
      "options": {
        "eslintConfig": "{projectRoot}/eslint.config.mjs",
        "lintFilePatterns": ["{projectRoot}/src/**/*.ts"]
      },
      "parallelism": true
    },
    "build": {
      "cache": true,
      "executor": "nx:run-commands",
      "dependsOn": ["^build"],
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "cwd":  "apps/esm-nest-jest",
        "command": "nest build"
      },
      "parallelism": true
    },
    "serve": {
      "continuous": true,
      "executor": "@nx/js:node",
      "options": {
        "buildTarget": "esm-nest-jest:build"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "{projectRoot}/jest.config.ts",
        "passWithNoTests": true
      }
    }
  }
}
