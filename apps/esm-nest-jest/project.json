{
  "name": "esm-nest-jest",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/esm-nest-jest/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "test": {
      "options": {
        "env": {
          "NODE_OPTIONS": "--no-experimental-strip-types --experimental-vm-modules"
        }
      }
    },
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}", "{projectRoot}/tsconfig.app.tsbuildinfo"],
      "options": {
        "main": "{projectRoot}/main.ts",
        "tsConfig": "{projectRoot}/tsconfig.app.json",
        "clean": false,
        "rootDir": "{projectRoot}/src",
        "outputPath": "{projectRoot}/dist",
        "generatePackageJson": false
      },
      "parallelism": true
    },
    "serve": {
      "continuous": true,
      "executor": "@nx/js:node",
      "options": {
        "buildTarget": "build"
      }
    }
  }
}
