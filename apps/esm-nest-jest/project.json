{
  "name": "esm-nest-jest",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/esm-nest-jest/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "test": {
      "options": {
        "env": {
          "NODE_OPTIONS": "--no-experimental-strip-types --experimental-vm-modules"
        }
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/esm-nest-jest",
        "commands": [
          "nx run esm-nest-jest:build --batch --watch",
          "node --watch dist/main.js"
        ]
      }
    }
  }
}
