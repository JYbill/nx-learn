{
  "name": "esm-nest-jest",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/esm-nest-jest/esm-nest-jest",
  "projectType": "application",
  "tags": [],
  "targets": {
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "eslintConfig": "{projectRoot}/eslint.config.mjs",
        "lintFilePatterns": ["{projectRoot}/src/**/*.ts"]
      },
      "parallelism": true
    },
    "build": {
      "executor": "@nx/js:tsc",
      "dependsOn": ["^build"],
      "options": {
        "main": "{projectRoot}/main.ts",
        "tsConfig": "{projectRoot}/tsconfig.app.json",
        "clean": false,
        "rootDir": "{projectRoot}/src",
        "outputPath": "{projectRoot}/dist",
        "generatePackageJson": false
      },
      "parallelism": true
    },
    "serve": {
      "continuous": true,
      "executor": "@nx/js:node",
      "options": {
        "buildTarget": "build"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "{projectRoot}/jest.config.ts",
        "passWithNoTests": true
      }
    }
  }
}
