{
  "name": "esm-nest-swc",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/esm-nest-swc/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "eslintConfig": "{projectRoot}/eslint.config.mjs",
        "lintFilePatterns": ["{projectRoot}/src/**/*.ts"]
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/dist"],
      "dependsOn": ["^build", "typecheck"],
      "options": {
        "cwd":  "apps/esm-nest-swc",
        "command": "nest build --watch"
      }
    },
    "serve": {
      "cache": false,
      "executor": "@nx/js:node",
      "options": {
        "watch": true,
        "buildTarget": "build"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "{projectRoot}/jest.config.cts",
        "passWithNoTests": true
      }
    }
  }
}
