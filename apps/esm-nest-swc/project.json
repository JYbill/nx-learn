{
  "name": "esm-nest-swc",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/esm-nest-swc/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "lint": {
      "cache": true,
      "executor": "@nx/eslint:lint",
      "options": {
        "eslintConfig": "{projectRoot}/eslint.config.mjs",
        "lintFilePatterns": ["{projectRoot}/src/**/*.ts"]
      },
      "parallelism": true
    },
    "build": {
      "cache": true,
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/dist"],
      "dependsOn": ["^build"],
      "options": {
        "cwd":  "apps/esm-nest-swc",
        "command": "nest build"
      },
      "parallelism": true
    },
    "serve": {
      "continuous": true,
      "executor": "@nx/js:node",
      "options": {
        "buildTarget": "esm-nest-swc:build"
      }
    },
    "prune-lockfile": {
      "dependsOn": ["build"],
      "cache": true,
      "executor": "@nx/js:prune-lockfile",
      "outputs": [
        "{workspaceRoot}/dist/apps/esm-nest-swc/package.json",
        "{workspaceRoot}/dist/apps/esm-nest-swc/pnpm-lock.yaml"
      ],
      "options": {
        "buildTarget": "build"
      }
    },
    "copy-workspace-modules": {
      "dependsOn": ["build"],
      "cache": true,
      "outputs": ["{workspaceRoot}/dist/apps/esm-nest-swc/workspace_modules"],
      "executor": "@nx/js:copy-workspace-modules",
      "options": {
        "buildTarget": "build"
      }
    },
    "prune": {
      "dependsOn": ["prune-lockfile", "copy-workspace-modules"],
      "executor": "nx:noop"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "{projectRoot}/jest.config.cts",
        "passWithNoTests": true
      }
    }
  }
}
